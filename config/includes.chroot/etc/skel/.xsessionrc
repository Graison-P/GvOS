# ~/.xsessionrc: executed by X session manager
# This file is sourced when starting an X session

# Source .profile if it exists
if [ -f "$HOME/.profile" ]; then
    . "$HOME/.profile"
fi

# Set default cursor theme
xsetroot -cursor_name left_ptr

# Start GvOS welcome screen on first login (if it exists)
if [ -f "$HOME/.local/bin/gvos-welcome" ] && [ ! -f "$HOME/.config/gvos-welcome-shown" ]; then
    "$HOME/.local/bin/gvos-welcome" &
    touch "$HOME/.config/gvos-welcome-shown"
fi
